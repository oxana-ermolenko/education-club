<% if user_signed_in? %>
  <%= form_for([ @project, @task ], class: 'ui reply form') do |form| %>
    

    <div class="field">
      <%= form.label :status %><br />
      <%= form.select :status, Task::STATUS_OPTIONS, {}, class: "form-control"  %>
      <% @project.errors.full_messages_for(:status).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="field">
      <%= form.label :title %><br />
      <%= form.text_field :title, class: "form-control" %>
      <% @project.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="field">
      <%= form.label :description %><br />
      <%= form.text_field :description, class: "form-control" %>
      <% @project.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="field">
      <%= form.label :steps %><br />
      <%= form.text_area :steps, class: "form-control" %>
      <% @project.errors.full_messages_for(:steps).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="field">
      <%= form.label :priority %><br />
      <%= form.select :priority, Task::PRIORITY_OPTIONS, {}, class: "form-control"  %>
      <% @project.errors.full_messages_for(:priority).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="actions">
      <%= form.submit "Edit Task", class: "ui submit basic button positive " %>
    </div>
  <% end %>
<% end %>