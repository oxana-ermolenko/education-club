
    <%= form_for @article do |form| %>
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, autofocus: true ,placeholder:"Title"%>
      </div>

      <div class="field">
        <%= form.label :body %>
        <%= form.text_area :body, placeholder:"Body"%>       
      </div>

      <div>
        <%= form.submit "Create ", class: "ui submit basic button positive " %>
      </div>
    <% end %>
    

