
<div class="comment">
    <a class="avatar">
        <%= image_tag current_user.avatar %>
    </a>
    <div class="content">
      <a class="author"><%= current_user.full_name %></a>
      <div class="metadata">
        <span class="date"> <%= time_ago_in_words(@article.updated_at) %> ago</span>
      </div>
      <div class="text">
        <%= comment.body %>
      </div>
    </div>
  </div>