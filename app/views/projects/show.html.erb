<div class="ui grid custom_margin">
  <div class="two wide column">
    <div class="ui vertical fluid tabular menu">
      <%= link_to projects_path, class: "item" do %>
        <i class="file altenate icon"></i> Profile
      <% end %>
      <%= link_to projects_path, class: "active item" do %>
        <i class="gamepad  icon"></i> Project
      <% end %>
      <a class="item">
        My Project
      </a>
      <%= link_to calendar_path, class: "item" do %>
        <i class="columns icon"></i> My Calendar
      <% end %>
    </div>
  </div>


  <div class="twelve wide stretched column">
    <div class="ui segment">
      <div class="ui grid">
        <%= render 'board', obj: @project %>
        <%= render 'tasks/tasks', obj: @tasks %>
      </div>
    </div>
  </div>
</div>
<div class="mb"></div>

<div class="ui modal edit ">
  <i class="close icon"></i>
  <div class="ui row">
    <div class="ui four wide column segment">
      <h2 class="ui center aligned dividing header">Edit Project</h2>
      <div class="ui form ">
        <%= render "form" %>
      </div>
    </div>
  </div> 
</div>

<div class="ui mini modal add">
  <i class="close icon"></i>
  <div class="ui row">
    <div class="ui four wide column segment">
      <h2 class="ui center aligned dividing header">Add a Member to a Team</h2>
      <div class="ui form ">
        <%= render "add_form" %>
      </div>
    </div>
  </div>
</div>

